<div class="w-full sm:w-1/3 mx-auto mt-10 p-8 bg-white border border-gray-600 rounded-lg">
  <h1 class="text-3xl font-bold text-center mb-4"><%= @pool.name %></h1>
  <p class="text-gray-800 text-center mb-2">Price: <%= @pool.price %></p>
  <p class="text-gray-800 text-center">Allow multiple entries: <%= @pool.allow_multiple_entries ? 'true' : 'false' %></p>
  <% if @pool.group %>
    <p class="text-gray-800 text-center">
      Group: <%= @pool.group.name %>
    </p>
  <% end %>
</div>
