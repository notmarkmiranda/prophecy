<div class="w-full mx-auto mt-10 p-8 bg-white border border-gray-600 rounded-lg">
  <h1 class="text-3xl font-bold mb-6">Create Entry for <%= @pool.name %></h1>

  <div class="space-y-6">
    <% if @entry.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
        <strong class="font-bold">Please fix the following errors:</strong>
        <ul class="mt-2 list-disc list-inside">
          <% @entry.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_with(model: [@pool, @entry], local: true, class: "space-y-6") do |f| %>
      <div class="flex justify-between items-center">
        <% if @pool.price > 0 %>
          <p class="text-gray-700">Entry fee: $<%= @pool.price %></p>
        <% end %>
        <%= f.submit "Create Entry", class: "bg-green-500 text-white py-3 px-6 rounded-lg hover:bg-green-600 font-semibold transition duration-300 ease-in-out" %>
      </div>
    <% end %>
  </div>
</div>