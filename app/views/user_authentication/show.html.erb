<%= form_with model: User.new, url: user_authentication_path, method: :post, class: "max-w-md mx-auto mt-10 p-6 bg-white rounded-lg shadow-md" do |f| %>
  <div class="mb-4">
    <%= f.label :email, "Email", class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= f.text_field :email, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>
  <div class="flex items-center justify-between">
    <%= f.submit "Submit", class: "bg-blue-500 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline hover:bg-blue-700" %>
  </div>
<% end %>

